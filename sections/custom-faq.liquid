<div class="page-width faq">
    <h2 class="h1">{{ section.settings.faq_title }}</h2>
    
    {% for block in section.blocks %}
    <div class="faq__row">
        <input type="checkbox" id="question-{{ block.id }}" class="faq__toggle">
        <label for="question-{{ block.id }}" class="faq__question">{{ block.settings.question }}</label>
        <div class="faq__answer">{{ block.settings.answer }}</div>
    </div>
    {% endfor %}
  
</div>

{% schema %}
{
  "name": "FAQ",
  "settings": [
    {
      "type": "text",
      "id": "faq_title",
      "label": "FAQ Title",
      "default": "Frequently Asked Questions"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Question"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Answer"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ",
      "category": "FAQ",
      "settings": {},
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "What is your return policy?",
            "answer": "Items can be returned within 30 days in their original condition. Contact us to initiate a return."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "How long does shipping take?",
            "answer": "Standard shipping takes 3-5 business days. Expedited options are available."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "Do you offer international shipping?",
            "answer": "Yes, we ship internationally. Costs vary and are calculated at checkout."
          }
        }
      ]
    }
  ]
}
{% endschema %}




